#!/usr/bin/env bash
set -e
if [[ ! -d "/home/guillaume/Src/Code/Project-Euler" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/guillaume/Src/Code/Project-Euler")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/guillaume/Src/Code/Project-Euler" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/guillaume/Src/Code/Project-Euler/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/guillaume/Src/Code/Project-Euler/.envrc" "/home/guillaume/Src/Code/Project-Euler/.direnv"/*.rc
